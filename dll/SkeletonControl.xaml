<UserControl x:Class="ssi.SkeletonControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Height="Auto" Width="Auto" AllowDrop="True" Background="Transparent">

    <Grid Name="skelGrid"
        VerticalAlignment="Stretch"
        HorizontalAlignment="Stretch"
        Width="Auto"
        Height="Auto">
        <Grid.RowDefinitions>

            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Column="0"
            Grid.Row="0"
            Name="skeletonGrid">
            <Canvas Name="canvas"></Canvas>
        </Grid>
    </Grid>
</UserControl>